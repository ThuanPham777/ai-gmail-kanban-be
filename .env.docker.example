# Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# Server
PORT=3000

# MongoDB
# - If you use docker-compose MongoDB: keep host as "mongodb"
# - If you use hosted MongoDB: put the full connection string here
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/email_kanban?authSource=admin

# CORS
# Frontend will be served on http://localhost (port 80) in Docker
CORS_ORIGIN=http://localhost

# JWT
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_SECRET=replace-with-refresh-secret
JWT_REFRESH_EXPIRES=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=

# OpenAI
OPENAI_API_KEY=sk-proj-....
OPENAI_MODEL_SUMMARY=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant
# - If you use docker-compose Qdrant: keep as http://qdrant:6333
# - If you use Qdrant Cloud: set QDRANT_URL to https://... and provide QDRANT_API_KEY
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
